<div
  class="alert-container fixed top-0 left-0 w-full z-50 flex justify-center mt-20"
>
  <!-- Success Alert Box -->
  <% if (success && success.length) { %>
  <div
    class="alert bg-green-100 border border-green-400 text-green-700 px-4 py-3 md:w-[50%] sm:w-[80%] rounded relative"
  >
    <strong class="font-bold"><%= success %></strong>
    <button type="button" class="btn-close absolute top-0 right-0 px-4 py-3">
      <i class="fa-solid fa-xmark text-black"></i>
    </button>
  </div>
  <% } %>

  <!-- Reject Alert Box -->
  <% if (reject && reject.length) { %>
  <div
    class="alert bg-red-100 border border-red-400 text-red-700 px-4 py-3 md:w-[50%] sm:w-[80%] rounded relative"
  >
    <strong class="font-bold"><%= reject %></strong>
    <button class="btn-close absolute top-0 right-0 px-4 py-3">
      <i class="fa-solid fa-xmark text-black"></i>
    </button>
  </div>
  <% } %>
</div>
